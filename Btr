from tonclient.client import TonClient, DEVNET_BASE_URL
from tonclient.types import DeploySet, CallSet, Signer, Abi

# Initialize TON Client
client = TonClient(network=DEVNET_BASE_URL)

# Blockchain Rojali Genesis Config
GENESIS_HASH = "0x00000..."
TOTAL_SUPPLY = 102 * 10**6  # 102 BTC
BLOCK_DEPTH = 12

# Deploy Contract to TON Blockchain
def deploy_genesis_block():
    deploy_set = DeploySet(
        tvc='path/to/your-genesis.tvc',
        initial_data={
            '_totalSupply': TOTAL_SUPPLY,
            '_genesisHash': GENESIS_HASH,
            '_blockDepth': BLOCK_DEPTH
        }
    )

    call_set = CallSet(
        function_name='constructor',
        input={}
    )

    signer = Signer.Keys(path_to_keys="path/to/keyfile.json")

    abi = Abi.from_file('path/to/your-abi.abi.json')

    # Send the transaction to the TON network
    client.processing.process_message(
        abi=abi,
        deploy_set=deploy_set,
        call_set=call_set,
        signer=signer
    )

    print("Genesis block for Bitcoin Rojali deployed with 102 BTC")

# Call the function to deploy the block
deploy_genesis_block()
